<?xml version="1.0" encoding="UTF-8"?>

<web-app>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>pages.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Welcome file -->
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>
    
    <servlet>
    <servlet-name>TopicServlet</servlet-name>
    <servlet-class>pages.TopicServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>TopicServlet</servlet-name>
    <url-pattern>/topics</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>TutorialListServlet</servlet-name>
    <servlet-class>pages.TutorialListServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>TutorialListServlet</servlet-name>
    <url-pattern>/tutorials</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>TutorialDetailsServlet</servlet-name>
    <servlet-class>pages.TutorialDetailsServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>TutorialDetailsServlet</servlet-name>
    <url-pattern>/tutorialDetails</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>pages.LogoutServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
</servlet-mapping>


</web-app>
