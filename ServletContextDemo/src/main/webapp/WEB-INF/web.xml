<?xml version="1.0" encoding="UTF-8"?>
<web-app>

<welcome-file-list>
    <welcome-file>index.html</welcome-file>
</welcome-file-list>


    <!-- Application level data -->
    <context-param>
        <param-name>companyName</param-name>
        <param-value>TechPlus Solutions</param-value>
    </context-param>

    <context-param>
        <param-name>supportEmail</param-name>
        <param-value>support@techplus.com</param-value>
    </context-param>

    <!-- Set Servlet -->
    <servlet>
        <servlet-name>SetContext</servlet-name>
        <servlet-class>pages.SetContextServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SetContext</servlet-name>
        <url-pattern>/setContext</url-pattern>
    </servlet-mapping>

    <!-- Get Servlet -->
    <servlet>
        <servlet-name>GetContext</servlet-name>
        <servlet-class>pages.GetContextServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GetContext</servlet-name>
        <url-pattern>/getContext</url-pattern>
    </servlet-mapping>

</web-app>
